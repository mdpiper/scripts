#! /usr/bin/env bash
# Script my typical cmake build process.

help() {
    echo -e "Usage: mbuild [-c | --config-only] [-m | --make-only]
              [-s | --skip-tests] [-dd | --dest-dir]
              [-h | --help]"
    exit 0
}

config_only=false
make_only=false
skip_tests=false
dest_dir=

i=1;
for argument in "$@"; do
    case $argument in
        -h|--help)
            help
            ;;
        -c|--config-only)
            config_only=true
            ;;
        -m|--make-only)
            make_only=true
            ;;
        -s|--skip-tests)
            skip_tests=true
            ;;
        -dd|--dest-dir)
            dest_dir=$PWD/_install
            ;;
        -?*)
            help
            ;;
        *)
            help
            ;;
    esac

    i=$((i + 1));
done

build_type=Release
build_dir=_build

if [ -e $dest_dir ]; then rm -rf $dest_dir; fi

if [ -e $build_dir ]; then rm -r $build_dir; fi
mkdir $build_dir && cd $build_dir

cmake .. \
    -DCMAKE_BUILD_TYPE=$build_type \
    -DCMAKE_INSTALL_PREFIX=$CONDA_PREFIX
if $config_only; then exit 0; fi

make -s
if [ $? != 0 ]; then exit 1; fi
if $make_only; then exit 0; fi

if [ $skip_tests = false ]; then
    ctest --test-dir .
fi

if [ $? != 0 ]; then
    exit 1
else
    make DESTDIR=$dest_dir install
fi

exit 0
